{{outlet}}
<h2> Edit Task </h2>
<form>
    <div class="form-group">
        <label>Title</label>
        {{input type="text" class="form-control" value=model.title 
        placeholder="Add Task name"}}
    </div>
    <div class="form-group">
        <label>Due Date:</label>
        {{input type="date" class="form-control" value=model.date}}
    </div>
    <div class="form-group">
        <label>Description</label>
        {{textarea class="form-control" value=model.description 
        placeholder="Describe task"}}
    </div>
    <button {{action 'editTask' model.id}} class="btn btn-primary">
    Submit</button>
</form>
